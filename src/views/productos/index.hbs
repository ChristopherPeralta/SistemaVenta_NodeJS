
    <!-- CONTENIDO -->
    <main >
        <section>
          <div class="container">
            <div class="agregar">
              <h1>Lista de Productos</h1>
              <a href="/productos/create"><i class='bx bxs-plus-circle active'></i></a>
              
            </div>
            
          <table class="table table-striped table-bordered table-dark">
            <thead>
              <tr>
                <th>CODIGO</th>
                <th>DESCRIPCION</th>
                <th>STOCK</th>
                <th>PRECIO_VENTA</th>
                <th>PRECIO_COMPRA</th>
                <th>CLASIFICACION</th>
                <th>MARCA</th>
                <th>ACCIONES</th>
              </tr>
            </thead>
            <tbody class="table table-striped table-bordered table-dark text-center">
                {{#each productos}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.DESCRIPCION}}</td>
                    <td>{{this.STOCK}}</td>
                    <td>{{this.PRECIO_VENTA}}</td>
                    <td>{{this.PRECIO_COMPRA}}</td>
                    <td>{{this.CLASIFICACION}}</td>
                    <td>{{this.MARCA}}</td>

                      <td class="acciones">
						
                  		<a class="btn btn-success btn-sm" href="/productos/{{this.id}}/edit">
                    		<span title="Editar Registro de Productos"></span><i class="bx bxs-pencil"></i>
                  		</a>
                  		<a class="btn btn-danger btn-sm" href="/productos/{{this.id}}/delete" onclick="return confirm('EstÃ¡ seguro de querer eliminar el registro')">
                    		<span title="Eliminar Registro"></span>
                    		<i class="bx bxs-trash"></i>
                  		</a>
                	</td>
                        
                </tr>
                {{/each}}
            </tbody>

          </table>
          </div>
        </section>
      </main>
        
    
    <script src="./js/menu.js"></script>
  
</body>
</html>